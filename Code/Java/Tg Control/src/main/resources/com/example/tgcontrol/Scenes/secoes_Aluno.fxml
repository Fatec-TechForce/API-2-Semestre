<BorderPane prefHeight="524.0" prefWidth="889.0" style="-fx-background-color: WHITE;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;" BorderPane.alignment="CENTER">
            <content>
                <VBox fx:id="sectionsContainer" alignment="TOP_CENTER" prefWidth="400.0" spacing="20.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <children>
                        <AnchorPane prefHeight="150.0" style="-fx-background-radius: 15px; -fx-background-color: #f5f5f5;">
                            <children>
                                <Label fx:id="section1Title" text="Seção 1" textFill="#250101" AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="20.0">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <Label fx:id="section1Update" text="Última atualização: 17/10/25" textFill="#a1a1a1" AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="40.0" />

                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0">
                           <image>
                              <Image url="@../SceneImages/Task Images/task-icon.png" />
                           </image></ImageView>

                                <Label fx:id="section1Status" style="-fx-background-color: #00e100; -fx-background-radius: 5px;" text="Aceito" textFill="WHITE" AnchorPane.bottomAnchor="80.0" AnchorPane.rightAnchor="15.0">
