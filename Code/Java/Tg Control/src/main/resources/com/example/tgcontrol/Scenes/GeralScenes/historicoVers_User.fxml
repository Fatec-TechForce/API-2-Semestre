<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="524.0" prefWidth="889.0"
            style="-fx-background-color: WHITE;"
            stylesheets="@../../SceneStyles/tableStyle.css"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.tgcontrol.controllers.Geral.Versoes_User_C">

    <top>
        <Label style="-fx-font-weight: bold;" text="HistÃ³rico" BorderPane.alignment="CENTER_LEFT">
            <font>
                <Font size="18.0" />
            </font>
            <BorderPane.margin>
                <Insets bottom="15.0" left="20.0" top="20.0" />
            </BorderPane.margin>
        </Label>
    </top>

    <center>
        <TableView fx:id="tableView" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colNome" text="Nome do Arquivo" />
                <TableColumn fx:id="colData" text="Data de Upload" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <BorderPane.margin>
                <Insets left="20.0" right="20.0" />
            </BorderPane.margin>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnVolta" mnemonicParsing="false" onAction="#voltar" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #9119B3;" text="Voltar" textFill="WHITE" />

                <Region HBox.hgrow="ALWAYS" />

                <Button fx:id="btnVerDetalhes" mnemonicParsing="false" onAction="#onVerDetalhes" prefHeight="30.0" prefWidth="126.0" style="-fx-background-color: #9119B3;" text="Ver Detalhes" textFill="WHITE" />
                <Button fx:id="btnBaixar" mnemonicParsing="false" onAction="#onBaixar" prefHeight="30.0" prefWidth="140.0" style="-fx-background-color: #9119B3;" text="Baixar Selecionado" textFill="WHITE" />
            </children>
            <BorderPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="15.0" />
            </BorderPane.margin>
        </HBox>
    </bottom>

</BorderPane>