<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="524.0" prefWidth="889.0" spacing="15.0" style="-fx-background-color: #f4f6f9; -fx-font-family: 'Segoe UI', Arial, sans-serif;"
      stylesheets="@../../SceneStyles/tableStyle.css" xmlns="http://javafx.com/javafx/18.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tgcontrol.controllers.ProfessorTG.Turmas_ProfessorTG_C">
    <padding>
        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label text="Gerenciamento de Turmas">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Button mnemonicParsing="false" prefHeight="32.0" prefWidth="116.0" style="-fx-background-color: black; -fx-font-weight: bold; -fx-background-radius: 8px;"
                        text="Criar Turma" textFill="WHITE" />
            </children>
            <VBox.margin>
                <Insets bottom="5.0" />
            </VBox.margin>
        </HBox>
        <TableView fx:id="tvTurmas" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colDisciplina" prefWidth="400.0" text="Matéria" />

                <TableColumn fx:id="colAno" minWidth="120.0" prefWidth="120.0" maxWidth="120.0" text="Ano">
                    <style>-fx-alignment: CENTER;</style>
                </TableColumn>
                <TableColumn fx:id="colSemestre" minWidth="120.0" prefWidth="120.0" maxWidth="120.0" text="Semestre">
                    <style>-fx-alignment: CENTER;</style>
                </TableColumn>
                <TableColumn fx:id="colAcao" minWidth="180.0" prefWidth="180.0" maxWidth="180.0" text="Ação" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>