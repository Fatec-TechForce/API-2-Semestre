<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="571.0" prefWidth="889.0" spacing="20.0" style="-fx-background-color: #f4f6f9; -fx-font-family: 'Segoe UI', Arial, sans-serif;" stylesheets="@../SceneStyles/tableStyle.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tgcontrol.controllers.Professor.home_Professor_C">
    <padding>
        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
    </padding>
    <HBox alignment="CENTER" spacing="30.0">
        <children>
            <VBox style="-fx-alignment: center; -fx-padding: 20px; -fx-background-color: white; -fx-background-radius: 8px; -fx-border-radius: 8px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 15, 0, 0, 5); -fx-pref-width: 220px;">
                <children>
                    <Label style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #555;" text="Total de Alunos" />
                    <Label fx:id="lblTotalAlunos" style="-fx-font-size: 38px; -fx-font-weight: bold; -fx-text-fill: #6A1B9A; -fx-padding: 10px 0 0 0;" text="-" />
                </children>
            </VBox>
            <VBox style="-fx-alignment: center; -fx-padding: 20px; -fx-background-color: white; -fx-background-radius: 8px; -fx-border-radius: 8px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 15, 0, 0, 5); -fx-pref-width: 220px;">
                <children>
                    <Label style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #555;" text="TGs Concluídos" />
                    <Label fx:id="lblTgsConcluidos" style="-fx-font-size: 38px; -fx-font-weight: bold; -fx-text-fill: #6A1B9A; -fx-padding: 10px 0 0 0;" text="-" />
                </children>
            </VBox>
            <VBox style="-fx-alignment: center; -fx-padding: 20px; -fx-background-color: white; -fx-background-radius: 8px; -fx-border-radius: 8px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 15, 0, 0, 5); -fx-pref-width: 220px;">
                <children>
                    <Label style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #555;" text="Pendentes" />
                    <Label fx:id="lblPendentes" style="-fx-font-size: 38px; -fx-font-weight: bold; -fx-text-fill: #6A1B9A; -fx-padding: 10px 0 0 0;" text="-" />
                </children>
            </VBox>
        </children>
    </HBox>
    <VBox spacing="10.0" VBox.vgrow="ALWAYS">
        <children>
            <Label text="Aguardando Correção">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Label>
            <StackPane VBox.vgrow="ALWAYS">
                <children>
                    <VBox fx:id="placeholderContainer" alignment="CENTER" spacing="10.0" visible="false">
                        <children>
                            <ImageView fitHeight="200.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@../SceneImages/noNotifications.png" />
                                </image>
                            </ImageView>
                            <Label text="Não há novas atualizações." textFill="#666666">
                                <font>
                                    <Font size="14.0" />
                                </font>
                            </Label>
                        </children>
                    </VBox>
                    <TableView fx:id="tabelaTgs" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colProgresso" prefWidth="150.0" text="Progresso" />
                            <TableColumn fx:id="colAluno" prefWidth="211.0" text="Aluno" />
                            <TableColumn fx:id="colTurma" prefWidth="119.0" text="Ação/Turma" />
                            <TableColumn fx:id="colSemestre" prefWidth="120.0" text="Semestre" />
                            <TableColumn fx:id="colAcao" prefWidth="120.0" text="Ação" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </children>
            </StackPane>
        </children>
    </VBox>
</VBox>